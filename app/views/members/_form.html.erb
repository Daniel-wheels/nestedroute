<%= simple_form_for [@group,@member], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :studies %>
  <%= f.input :dependency %>
  <%= f.input :group_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                group_members_path(@group), :class => 'btn' %>
  </div>
<% end %>
