<%= simple_form_for @group, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancelar', :default => t("helpers.links.cancelar")),
                groups_path, :class => 'btn' %>
  </div>
<% end %>
